extends ../../_layout

block page-stylesheet
  link(rel="stylesheet" href="/css/pages/docs/index.css")
  script(src="http://cdnjs.cloudflare.com/ajax/libs/highlight.js/8.2/highlight.min.js")
  link(rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/highlight.js/8.2/styles/tomorrow-night.min.css")
  script.
    hljs.initHighlightingOnLoad();

block bleed
  header.doc-hero
    block hero-title
    block hero-example

block header
  include _header

block content
  //- Below tablet, this is a wrapping container.
  .fixed-area

    //- Two main containers here, each are fixed to the screen

    //- Fixed sidebar
    aside.fixed-toc
      h1 View Options
      form
        label
          input#docs-semantic(type="checkbox" checked)
          | Semantic Sass
        label
          input#docs-jquery(type="checkbox")
          | jQuery

      h1 Table of Contents
      #toc
        p.creating-table Creating table of contents...

    //- Fixed main pane
    main.fixed-main

      //- Within fixed-main, there are "Documents." Each document has both a
      //- general content area and a code snippet.

      //- Constrains width of document area
      section.document-container
        block documents

block postJS
  script.
    k$.nav('.docs-nav')

block postDocsJS
