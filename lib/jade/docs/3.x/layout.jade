extends ../../layout

block bleed
  include _header

  header.hero
    block hero-title
    block hero-example

block container
  .row
    aside.sidebar
      section.meta
        h1 View Options
        form
          label.checkbox
            input#docs-semantic(type="checkbox" checked)
            |  Semantic Sass
          label.checkbox
            input#docs-jquery(type="checkbox")
            |  jQuery

        block meta

      section.toc
        ul
          li
            a(href="#basic")
              span.fa.fa-cube
              |  Basic Implementation
            block toc-basic
          li
            a(href="#variations")
              span.fa.fa-cubes
              |  Variations
            block toc-variations
          li
            a(href="#granular") Granular
            block toc-granular

      section.troubleshooting
        block troubleshooting

    main.mainpane
      block docVars
        - var variations = true
      section.basic#basic
        h1
          span.fa.fa-cube
          |  Basic Usage
        block basic

        if variations
          section.variations#variations
            h1
              span.fa.fa-cubes
              |  Digging deeper
            block variations

      section.granular#granular
        // h1 Granular
        block granular

block postJS
  script.
    k$.nav('.docs-nav')
